<div class="example-wrapper">
    <p id="user-data" style="display:none;">{{users}}<p>
    <div id="display"></div>
</div>

<script>
    const display = document.getElementById('display');
    const userData = JSON.parse(document.getElementById('user-data').innerHTML);
    let myUser = localStorage.getItem("visitProfile");

    myUser = userData.find((user) => user.Name === myUser);
    
    console.log(localStorage.getItem("visitProfile"));

    display.innerHTML = `
        <img src="${myUser.img}"/>
        <p>Nom : </p>
        <h2>${myUser.Name}</h2>
        <p>Description : </p>
        <h3>${myUser.Description}</h3>
    `;

</script>
